#---Working with Docker Hub
#-Login to www.hub.docker.com
#-Search image with name 

#-List image on your local host
docker image ls
#-Remove those images
docker image rm <image name>
 
#-download the image from docker hub
docker pull alpine:latest
docker pull alpine:3.23.3
docker image ls

docker image inspect 

#--Working for omage with tag
docker pull nginx:latest
docker pull nginx:1.29.4

docker image ls
docker system df

docker image tag nginx:latest sennginx:jan26
docker image ls
docker system df

docker image rm sennginx:jan26
docker image ls
docker system df
docker image rm nginx:latest
docker image ls
docker system df
